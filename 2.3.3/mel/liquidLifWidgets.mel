//		liqlog("               -attribute \""+$pname+"\"" );
//		liqlog("               \""+$pnameCtl +"\"");	

      attrFieldGrp  -p $gLiquid_currentAEParent
                    -label $plabel
                    -cc ( "liquidParamAU " + $gLiquid_currentAENode )
                    -attribute $pname
                    $pnameCtl;
   } else attrFieldGrp -e -attribute $pname -ann $description $pnameCtl;

     string $subPname = ( $arraySize )? ($pname+"."+$paramName) : ($pname);
     setAttr -k $channelBox $pname;
//     setAttr -k $channelBox ($subPname+"_00");
//     setAttr -k $channelBox ($subPname+"_01");
//     setAttr -k $channelBox ($subPname+"_02");
//     setAttr -k $channelBox ($subPname+"_03");
//     setAttr -k $channelBox ($subPname+"_10");
//     setAttr -k $channelBox ($subPname+"_11");
//     setAttr -k $channelBox ($subPname+"_12");
//     setAttr -k $channelBox ($subPname+"_13");
//     setAttr -k $channelBox ($subPname+"_20");
//     setAttr -k $channelBox ($subPname+"_21");
//     setAttr -k $channelBox ($subPname+"_22");
//     setAttr -k $channelBox ($subPname+"_23");
//     setAttr -k $channelBox ($subPname+"_30");
//     setAttr -k $channelBox ($subPname+"_31");
//     setAttr -k $channelBox ($subPname+"_32");
//     setAttr -k $channelBox ($subPname+"_33");
  }


  if ( $arraySize && !$skip ) {
    $gLiquid_currentAEParent = substitute("|[A-Za-z0-9_]+$", $gLiquid_currentAEParent, "" );
    $gLiquid_currentAEParent = substitute("|[A-Za-z0-9_]+$", $gLiquid_currentAEParent, "" );
