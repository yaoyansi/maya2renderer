	float $min    = $range[0];
	float $max    = $range[1];
	float $slmin  = $range[0];
	float $slmax  = $range[1];

	if ( $min == $max ) {
		$min    = -100000000;
		$max    =  100000000;
		float $val = `getAttr $plug`;
